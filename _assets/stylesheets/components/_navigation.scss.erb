//NAVIGATION
//--------------------------------------------------

//main site navigation
.main-nav {
	position: absolute;
	z-index: 400;
	width:auto;
	top: 20px;
	right: 20px;
	font: 600 14px 'Open Sans', Serif;
	clear: both;
	@include transition(all 0.2s ease-out);

	.main-nav-icon-link {
		color:#383838;
	}

	.main-nav-icon {
		float:right;
		display:block;
		padding:6px 12px;
		cursor:pointer;
		opacity:0.4;

		&.fa-navicon {
			font-size: 1.53333333em;
		}
	}

	.main-nav-pages {
		padding:0;
		margin:0;
		list-style:none;
		float:left;
		opacity:0;
		height:0;
		overflow:hidden;
		@include transition(all 0.2s ease-in-out);

		.main-nav-page {
			padding:1px 0;
			float:left;
		}

		.main-nav-page-link {
			color:#007cc3;
			padding:6px 17px;
		}
	}

	@media screen and (max-width: 906px) {
		display:none !important;
	}
}


//open nav state
.main-nav:hover {
		padding:0 0 30px 30px;

	.main-nav-icon,
	.main-nav-pages {
		opacity:1;
		height:auto;
	}
}



//change color of nav on project so it can be seen of project hero
.main-nav.project {

	.main-nav-icon {
		color:#fff;
		opacity:0.5;
	}

	.main-nav-icon-link {
		color:#fff;
		opacity:0.7;

		&:hover {
			opacity:1;
		}
	}
}