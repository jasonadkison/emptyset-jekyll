//site logo
.site-logo {
	text-align: center;
	text-transform: uppercase;
}

//site logo link
.site-logo-link {
	position:fixed;
	top:13px;
	left:13px;
	z-index:200;
	display:block;
	padding:9px 12px 6px;
	background:#29292a;
	color:#fff;
	@include transition(background 0.6s ease-out);

	&:hover{
		background:#3287c1;
	}

	@media screen and (max-width: 906px) {
		position:absolute;
		left:5%;
		top:30px;
		position:absolute;
		margin-top:30px;
		display:inline-block;
	}
}