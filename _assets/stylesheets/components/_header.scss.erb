//site logo
.site-logo {
	text-align: center;
	text-transform: lowercase;
	letter-spacing: 1px;
}

//site logo link
.site-logo-link {
	position:fixed;
	top:13px;
	left:13px;
	z-index:200;
	display:block;
	padding:9px 12px 6px;
	color: lightgrey;
	@include transition(color 250ms);

	&:hover{
		color: grey;
	}

	@media screen and (max-width: 906px) {
		position:absolute;
		left:5%;
		top:30px;
		position:absolute;
		margin-top:30px;
		display:inline-block;
	}
}


