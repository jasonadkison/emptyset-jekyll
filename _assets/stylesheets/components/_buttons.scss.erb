/* buttons */
a.button.alt,
a.button.large.alt {
	background: darkslategrey;

	&:hover {
		background: lighten(darkslategrey, 8%);
	}
}

a.button.large {
	background: lightgrey;
	text-transform: uppercase;
	margin-top: 1em;
	padding: 1em 2em;

	&:hover {
		background: lighten(lightgrey, 8%);
	}
}
