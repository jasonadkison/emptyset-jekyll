//PROJECTS SECTION
//--------------------------------------------------

.project-hero {
	display:block;
	position:relative;
	background-color: #26A65B;
	height:100%;
	width:100%;
	overflow:hidden;

	.project-hero-background {
		position:absolute;
		height:100%;
		width:100%;
		top:0;
		left:0;
		opacity:0.6;
		background-size:cover;
		background-position:fixed;
	}

	.project-hero-header {
		position:relative;
		width:90%;
		top:10%;
		max-width:760px;
		left:auto;

		.project-title a {
			color:#ffffff;
			font:700 1.6em 'Domine', Serif;
			line-height:86px;

			&:hover {
				border-bottom:3px solid rgba(#fff, 0.2);
			}
		}

		.project-category {
			font:600 22px 'Open Sans', Serif;
			color:#e4e4e4;
			opacity:0.6;
			text-transform:capitalize;

			a {
				color:#e4e4e4;
				opacity:.6;

				&:hover {
					opacity:1;
				}
			}
		}
	}

	.project-see-more {
		font-size: 38px;
		color: #eee;
		position: absolute;
		bottom: 5%;
		left: 50%;
		opacity: 0.6;
		-webkit-animation: pulsate 4s ease-out;
		-webkit-animation-iteration-count: infinite;
		cursor:pointer;
	}

	@media screen and (max-width: 595px) {
		height:auto;
		min-height:none;
		padding:40px 0;

		.project-hero-header {
			padding:80px 0 20px 0;

			.project-title a{
				font:700 1.2em 'Domine', Serif;
				line-height:22px;
			}
		}

		.project-see-more {
			display:none;
		}
	}

	@media screen and (max-height: 640px) {

		.project-hero-header {
			top:25%;
		}
	}
}
