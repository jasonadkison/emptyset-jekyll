/* layout */
html, body, section.intro {
	height: 100%;
}

section.intro {
	color: white;
	text-transform: uppercase;
	padding: 6em 0 3em;
	position: relative;

	h1, h2, h3, h4, h5 {
		font-family: 'Montserrat', sans-serif;
		text-transform: uppercase;
	}

	/* parallax backgrounds */
	.image-bg {
		background: $parallax-intro-url;
		background-size: cover;
		position: absolute;
		height: 100%;
		width: 100%;
		min-width: 100%;
		top: 0;
		left: 0;
		z-index: -200;
	}

	.color-overlay {
		position: absolute;
		height: 100%;
		width: 100%;
		top: 0;
		left: 0;
		background-color: $highlight;
		opacity: 0.7;
		z-index: -100;
	}

	.container {
		@include outer-container;
		padding: 0 .5em;
		text-align: center;

		@include media($small-screen-up) {
			position: relative;
			top: 35%;
			transform: translateY(-50%);
		}

		@include media($small-screen-down) {
			padding-top: 8em;
		}
	}

	h1 {
		text-align: center;
		font-size: 6em;
	}

	h3 {
		text-align: center;
		font-size: 1em;
	}

	.landing-icons {
		display:inline-block;
		margin-top: 2%;

		.devicons:before {
			font-size: 2rem;
			opacity: 0.6;
		}
	}
}