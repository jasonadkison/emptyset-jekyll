//LAYOUT
//--------------------------------------------------

/* layout */
.container {
	@include outer-container;
	padding: 0 .5em;
}



.wrapper{
	/*width:90%;*/
	@include outer-container;
	max-width:760px;
	margin:0 auto;
}









//pagination styling
.pagination{
	overflow:hidden;
	padding:50px 0;
	border-bottom:1px solid #dfdfdf;
	.right i{
		margin:0 0 0 15px;
	}
	@media screen and (max-width: 405px) {
		span{
			display:none;
		}
		i, .right i{
			margin:0;
		}
	}
}

//helper classes for pagination
//float left
.left{
	float:left;
}

//float right
.right{
	float:right;
}