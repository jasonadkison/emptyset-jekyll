//LAYOUT
//--------------------------------------------------

/* layout */
.container {
	@include outer-container;
	padding: 0 .5em;
	text-align: center;
}

html, body, section.intro {
	height: 100%;
}

section.intro {
	padding: 6em 0 3em;
	position: relative;
}

/* parallax backgrounds */
.image-bg {
	position: absolute;
	height: 100%;
	width: 100%;
	min-width: 100%;
	top: 0;
	left: 0;
	z-index: -200;
}

.color-overlay {
	position: absolute;
	height: 100%;
	width: 100%;
	top: 0;
	left: 0;
	background-color: $highlight;
	opacity: 0.7;
	z-index: -100;
}












.wrapper{
	width:90%;
	max-width:760px;
	margin:0 auto;
}









//pagination styling
.pagination{
	overflow:hidden;
	padding:50px 0;
	border-bottom:1px solid #dfdfdf;
	.right i{
		margin:0 0 0 15px;
	}
	@media screen and (max-width: 405px) {
		span{
			display:none;
		}
		i, .right i{
			margin:0;
		}
	}
}

//helper classes for pagination
//float left
.left{
	float:left;
}

//float right
.right{
	float:right;
}